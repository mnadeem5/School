#include<stdio.h>

int main (void)
{
	unsigned short int i, j, k;

	i = 0xFF7F;
	printf("0x%X\n", i >> 1);

	i = 0x0004;
	printf("0x%x\n", i << 3);

	i = 0x0004;
	printf("0x%x\n", i << i);

	i = 0xDFFF; j = 0xFF7F;
	printf("0x%x\n", i & j);

	i = 0x2840; j = 0x0004;
	printf("0x%x\n", i | j);

	i = 0xDFFF; j = 0x0004;
	printf("0x%x\n", i & ~j);

	i = 0xDFFF; j = 0x2840;
	printf("0x%x\n", i ^ j);

	i = 8; j = 9;
	printf("%d\n", (i >> 1) + (j >> 1));

	i = 1;
	printf("%d\n", i & ~i);

	i = 2; j = 1; k = 0;
	printf("%d\n", ((~i) & j) ^ k);

	i = 7; j = 8; k = 9;
	printf("%d\n", i ^ (j & k));

	return 0;
}
