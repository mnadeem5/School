void avg_sum(double a[], int n, double *avg, double *sum);
int main (void)
{
	double a[]={1, 2};
	int n=2;
	double avg, sum;

	avg_sum(a, n, &avg, &sum);

	printf("%lf\t%lf", avg, sum);
	return 0;
}

void avg_sum(double a[], int n, double *avg, double *sum)
{
	int i;
	*sum = 0.0;
	for (i = 0 ; i < n; i++)
		*sum += a[i];
	*avg = *sum / n;
}
