#include<stdio.h>

void chessFill(char*);

int main(void)
{
	char chess_board [8][8]={};
	chessFill(&chess_board);

	char *p=chess_board;

	int i=0;
	while(p<chess_board+8)
	{
		while(i++<1)printf("%c", *p+=8);
		printf("\n");p-=64;
	}
	return 0;
}

void chessFill (char *board)
{
	char *p=board;

	*p++='r';
	*p++='p';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='P';
	*p++='R';

	*p++='n';
	*p++='p';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='P';
	*p++='N';

	*p++='b';
	*p++='p';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='P';
	*p++='B';

	*p++='q';
	*p++='p';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='P';
	*p++='Q';

	*p++='k';
	*p++='p';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='P';
	*p++='K';

	*p++='b';
	*p++='p';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='P';
	*p++='B';

	*p++='n';
	*p++='p';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='P';
	*p++='N';

	*p++='r';
	*p++='p';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='.';
	*p++='P';
	*p++='R';
}
