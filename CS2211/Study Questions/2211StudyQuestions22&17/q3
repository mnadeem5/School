#include<stdio.h>
#include<stdlib.h>

int *create_array(int n, int initial_value);

int main(void)
{
	create_array(10, 1);
	return 0;
}

int *create_array(int n, int initial_value)
{
	int* array=malloc(sizeof(initial_value)*n), *ptr=array;
	while(ptr-array<n)*ptr++=initial_value;
	return array;
}
