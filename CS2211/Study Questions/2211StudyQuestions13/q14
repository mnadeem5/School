#include<stdio.h>
#include<string.h>

void get_extension(const char *filename, char *extension);

int main(void)
{
	char filename [] = "filename.txt";
	char extenstion [3+1];

	get_extension(filename, extenstion);

	puts(extenstion);
	return 0;
}

void get_extension(const char *filename, char *extension)
{
	int p=0;

	while(filename[p]&&filename[p]!='.')p++;p++;
	strcpy(extension, &filename[p]);
}
